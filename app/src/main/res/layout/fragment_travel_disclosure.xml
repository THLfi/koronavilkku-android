<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable name="model" type="fi.thl.koronahaavi.diagnosis.CodeEntryViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include android:id="@+id/layout_toolbar" layout="@layout/toolbar"/>

        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/layout_toolbar"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/travel_disclosure_header"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="10dp"
                    android:textAppearance="?attr/textAppearanceHeadline3"
                    />

                <RadioGroup
                    android:id="@+id/radio_group_travel_disclosure"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:padding="20dp"
                    android:clipToPadding="false"
                    android:checkedButton="@={model.travelSelection}">

                    <RadioButton
                        android:id="@+id/radio_travel_no"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/travel_disclosure_no"
                        style="@style/Widget.Vilkku.RadioButton.Card"
                        />
                    <RadioButton
                        android:id="@+id/radio_travel_yes"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:text="@string/travel_disclosure_yes"
                        style="@style/Widget.Vilkku.RadioButton.Card"
                        />
                </RadioGroup>

            </LinearLayout>
        </ScrollView>

        <include
            android:id="@+id/layout_share_content_continue"
            layout="@layout/layout_bottom_continue_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:buttonEnabled="@{model.travelContinueAllowed}"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>